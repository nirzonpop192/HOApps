<?xml version="1.0" encoding="utf-8" ?>
<resources>
  <!-- Inherit from the light Material Theme -->
  <style name="MyCustomTheme" parent="Theme.AppCompat.Light.NoActionBar">
    <!-- Customizations go here -->

    <item name="android:actionBarStyle">@style/ActionBarTheme</item>
    
    <item name="android:colorPrimary">@color/my_blue</item>
    <!-- Override the color of UI controls -->
    <item name="android:colorAccent">@color/my_purple</item>
  </style>
<!-- Default Theme-->
  <style name="ActionBarTheme" parent="android:Widget.Holo.Light.ActionBar.Solid.Inverse">
    <item name="android:background">@color/color_action_bar</item>
  </style>


  <!-- Black Theme action bar-->
  <style name="ActionBarThemeBack" parent="android:Widget.Holo.Light.ActionBar.Solid.Inverse">
    <item name="android:background">@color/Color_yellow</item>
  </style>
  
  <style name="BlackTheme" parent="Theme.AppCompat.Light.DarkActionBar" >

   <!-- <item name="android:actionBarStyle">@style/ActionBarThemeBack</item>-->
    <item name="android:background">#000000</item>
    <item name="android:textColor">#FFF</item>

  </style>


  <!-- BlueTheme Theme action bar-->
  <style name="BlueTheme" parent="Theme.AppCompat.Light.NoActionBar" >

   <!-- <item name="android:actionBarStyle">@style/ActionBarThemeBack</item>-->
    <item name="android:background">#B0E0E6</item>
    <item name="android:textColor">#000000</item>

  </style>


</resources>
